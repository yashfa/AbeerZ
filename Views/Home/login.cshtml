@model Farhampton.Models.user

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
 }



<title>Login</title>

<meta name="viewport" content="width=device-width, initial-scale=1">


<style>
input[type=text], select {
    width: 25%;
    padding: 8px 20px;
    margin: 4px 0;
    display: block;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    
}

input[type=password], select {
    width: 25%;
    padding: 8px 20px;
    margin: 4px 0;
    display: block;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    
}

input[type=submit] {
    width: 25%;
    background-color: #24ADF6;
    color: white;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    
}

input[type=submit]:hover {
    background-color:#6724F6;
}

div {
    border-radius: 5px;
    background-color: #f2f2f2;
    padding: 7px;
}
</style>
<body>

    <div class="grid flex">
      <div class="row">
        <div class="colw_6">
          <h1 id="title-sub1">Farhampton Hotel</h1>
          <h2 id="title-sub2">LOGIN</h2>
        </div>
      </div>
    </div>
   
    

    <div >
        <center>
       @using (Html.BeginForm("login", "Home"))
                {   
                    
                    <p>@Html.Label("Username: ")
                        @Html.TextBoxFor(x => x.username)
                         @Html.ValidationMessageFor(model => model.username)
                    </p>
            
                    <p>@Html.Label("Password: ")</p>
                    <p>@Html.PasswordFor(x => x.password)</p>
            
            
                   <div> 
                    <center>
                        <input type="submit" value="LOGIN"/>
                    </center>
                 </div>
                   
                }
         </center>
        <center>
            <div>
                @Html.ActionLink("Forgot Password?", "forgotpass") 
            </div>
        
            <div>
                @Html.ActionLink("Sign in as Administration", "Login","Admin") 
            </div>
        </center>
    </div>
</body>
